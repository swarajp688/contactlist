<html>
    <head>
        <title>
            <%= title%>
        </title>
        <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1><i class="far fa-address-book"></i>
            My Contacts List</h1>
        <div id="contact-div">
            <ul>
                <% for (let i of contact_list){%>
                    <li class="contacts">
                        <div id="details">
                            <p><%= i.name %></p>
                            <p><%= i.phone%></p>
                        </div>
                        <div class="delete-button">
                            <a  href="/delete-contact/?phone=<%= i.phone %>">
                                <i class="fas fa-window-close"></i>
                            </a>
                        </div>
                    </li>
                    
                <% } %>
            </ul>
            
            <form action="/create-contact" method="POST" id="contact-form">
                <input type="text" name="name" placeholder="Enter Name" required>
                <input type="number" name="phone" placeholder="Enter Phone No" required>
                <button type="submit" id="form-button">Add </button>
            </form>
        </div>
       <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>